<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8"></meta>
        <title>{{title}}</title>
        <link rel="stylesheet" href="{{host}}/font-awesome/css/font-awesome.min.css">
        <link rel="stylesheet" href="{{host}}/style/hyui.css"></style>
    </head>
    <body>
        <div class="hy-layout-header">
            <div class="container">
                <a class="logo" href="{{host}}"><img src="{{host}}/resources/imgs/logo.png"></img></a>
                <div class="nav">
                    <ul>
                        <li><a href="">组件库</a></li>
                        <li><a href="">组件库</a></li>
                        <li><a href="">组件库</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="hy-layout-searchbar">
            <div class="search-wrapper icon-input">
                <i class="fa fa-search"></i>
                <input></input>
                <span>查找</span>
            </div>
        </div>
        <div class="hy-layout-middle">
            <div class="hy-layout-sidebar">
                {{#menus}}
                <h3 class="category-name">{{category}}</h3>
                <ul>
                    {{#articles}}
                    <li><a href="{{link}}">{{title}}</a></li>
                    {{/articles}}
                </ul>
                {{/menus}}
            </div>
            <div class="hy-layout-content">
                {CONTENT}
            </div>
        </div>
        <script src="{{host}}/vendor/highlight.min.js"></script>
        <script>hljs.initHighlightingOnLoad();</script>
    </body>
</html>
